<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-table-users" author="ykuzmich">
        <createTable tableName="users" schemaName="public">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="hash_password" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="password_created_at" type="timestamp with time zone" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="password_updated_at" type="timestamp with time zone" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="user_type_id" type="bigint">
                <constraints foreignKeyName="fk_user_type" referencedTableName="user_types"
                             referencedColumnNames="id" nullable="false"/>
            </column>
            <column name="user_status_id" type="bigint">
                <constraints foreignKeyName="fk_user_status" referencedTableName="user_statuses"
                             referencedColumnNames="id" nullable="false"/>
            </column>
            <column name="version" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>